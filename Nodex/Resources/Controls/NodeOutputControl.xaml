<UserControl x:Class="Nodex.Resources.Controls.NodeOutputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nodex.Resources.Controls"
             mc:Ignorable="d" Height="16">
    <Grid>
        <TextBlock x:Name="textLabel" HorizontalAlignment="Right" Margin="0,0,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
        <Ellipse x:Name="ellipseOut" HorizontalAlignment="Right" Height="16" Stroke="Black" VerticalAlignment="Top" Width="16" MouseLeftButtonDown="ellipseOut_MouseLeftButtonDown" MouseLeftButtonUp="ellipseOut_MouseLeftButtonUp" AllowDrop="True" Drop="ellipseOut_Drop">
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF595959" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
